make_conf_build ( ) (
	pprint 2 "Construct build make.conf ($NANO_MAKE_CONF_BUILD)"

	if [ -e ${NANO_MAKE_CONF_BUILD} ]; then 
		rm ${NANO_MAKE_CONF_BUILD}
	fi

	## Copy the target's make.conf.build into place.
	if [ -e targets/${NANO_TARGET}/make.conf.build ]; then
		cp targets/${NANO_TARGET}/make.conf.build ${NANO_MAKE_CONF_BUILD} 
	fi
	
	## If there is a target arch make.conf.build append it.
	if [ -e targets/${NANO_TARGET}/${NANO_ARCH}/make.conf.build ]; then
		cat targets/${NANO_TARGET}/${NANO_ARCH}/make.conf.build >> ${NANO_MAKE_CONF_BUILD} 
	fi
)
